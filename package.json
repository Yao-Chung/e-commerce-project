{
  "name": "e-commerce-project",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "dev:all": "pnpm run dev:backend & pnpm run dev:frontend",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm run build:frontend && pnpm run build:backend",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "lint": "pnpm run lint:frontend && pnpm run lint:backend",
    "lint:frontend": "pnpm --filter frontend lint",
    "lint:backend": "pnpm --filter backend lint",
    "lint:fix": "pnpm run lint:fix:frontend && pnpm run lint:fix:backend",
    "lint:fix:frontend": "pnpm --filter frontend lint:fix",
    "lint:fix:backend": "pnpm --filter backend lint:fix",
    "format": "pnpm run format:frontend && pnpm run format:backend",
    "format:frontend": "pnpm --filter frontend format",
    "format:backend": "pnpm --filter backend format",
    "format:check": "pnpm run format:check:frontend && pnpm run format:check:backend",
    "format:check:frontend": "pnpm --filter frontend format:check",
    "format:check:backend": "pnpm --filter backend format:check",
    "check-ts": "pnpm run check-ts:frontend && pnpm run check-ts:backend",
    "check-ts:frontend": "pnpm --filter frontend check-ts",
    "check-ts:backend": "pnpm --filter backend check-ts",
    "preview": "pnpm --filter frontend preview",
    "storybook": "pnpm --filter frontend storybook",
    "build-storybook": "pnpm --filter frontend build-storybook",
    "prisma:generate": "pnpm --filter backend prisma:generate",
    "prisma:migrate": "pnpm --filter backend prisma:migrate",
    "prisma:studio": "pnpm --filter backend prisma:studio",
    "prisma:seed": "pnpm --filter backend prisma:seed"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.6.3"
}
